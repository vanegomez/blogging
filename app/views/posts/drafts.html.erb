<div class="row">
  <h1>All Draft Posts</h1>
</div>
<div class="row">
  <% @posts.each do |post| %>
    <h3><%= link_to post.title, post_path(post) %></h3>
    <h6>by: <em><%= post.author.capitalize %></em></h6>
    <%= link_to "Publish", post_path(post), method: :put %>
    <hr>
  <% end %>
</div>
